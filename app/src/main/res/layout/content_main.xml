<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:animateLayoutChanges="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@android:id/candidatesArea"
        android:visibility="gone"
        style="@style/custom_tv"
        android:gravity="center_horizontal"
        android:text="@string/tv_noNfc"
        android:textColor="@color/colorRed"
        />
    <LinearLayout
        android:id="@+id/content_cardReady"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@drawable/card_bg"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="32dp"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@android:id/text1"
            style="@style/custom_tv"
            android:text="4444 - 4444 - 4444 - 4444"
            android:layout_marginTop="90dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@android:id/text2"
                style="@style/custom_tv"
                android:layout_weight="1"
                android:text="22/15"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                />
            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/content_putCard"
        android:visibility="gone"
        style="@style/custom_tv"
        android:drawableTop="@drawable/nfc_scan"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:text="@string/tv_tapYourCard"
        />
    <TextView
        android:id="@+id/text4"
        style="@style/custom_tv"
        android:text="holder name"
        android:layout_marginTop="50dp"
        android:visibility="visible"
        />
</LinearLayout>